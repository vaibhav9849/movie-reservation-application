<html lang="en">
  <head>
    <title></title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <style type="text/css"></style>
  </head>

  <body
    style="
      margin: 0;
      padding: 0;
      background: #f4f6fb;
      line-height: 22px;
      font-family: sans-serif;
    "
  >
    <!-- Top Border -->
    <table
      border="0"
      cellpadding="0"
      cellspacing="0"
      width="100%"
      style="table-layout: fixed"
    >
      <tr>
        <td style="padding: 1rem 2rem; font-size: 13px"></td>
      </tr>
    </table>

    <!-- Content     -->
    <table
      border="0"
      cellpadding="0"
      cellspacing="0"
      width="100%"
      style="table-layout: fixed"
    >
      <tr>
        <td style="padding: 0 2rem">
          <!-- WRAPPER TABLE -->
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="600"
            style="
              padding: 24px;
              background: #ffffff;
              border: 1px solid #d1d8e3;
              margin-left: auto;
              margin-right: auto;
            "
          >
            <tr>
              <td>
                <!-- LOGO/PREHEADER TEXT -->
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td
                      style="
                        font-size: 18px;
                        font-family: sans-serif;
                        font-weight: bold;
                      "
                    >
                      <p style="color: #00a6e0; text-decoration: none">
                        Enjoy Your Movie!
                      </p>
                    </td>
                  </tr>
                  <tr
                    style="
                        font-size: 14px;
                        font-family: sans-serif;
                        font-weight: 400;
                      "
                  >
                    <p>Movie: {{ticket.movie_name}}</p>
                    <p>Theatre: {{ticket.theatre_name}}</p>
                    <p>Showtime: {{ticket.show_time}}</p>
                    <p>Seat: {{ticket.seat_label}}</p>
                    <p>Cost: ${{ticket.cost}}</p>
                    <p>Ticket #{{ticket.ticket_id}}</p>
                  </tr>
                  <tr>
                    <td style="padding: 1rem 0"></td>
                  </tr>

                  <tr>
                    <td>
                      <!-- text-transform: capitalize;                      -->
                      <a
                        style="
                          font-size: 14px;
                          cursor: pointer;
                          text-decoration: none;
                          border: #00a6e0 1px solid;
                          font-weight: bold;
                          color: #ffffff;
                          padding: 0.5rem 1rem;
                          margin: 0;
                          background-color: #00a6e0;
                          border-radius: 5px;
                        "
                        href={{url}}
                      >
                        View Ticket
                      </a>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>

    <!-- Footer     -->
    <table
      border="0"
      cellpadding="0"
      cellspacing="0"
      width="100%"
      style="table-layout: fixed"
    >
      <tr>
        <td style="padding: 1rem 2rem">
          <!-- LEFT COLUMN -->
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="600"
            style="
              margin-left: auto;
              margin-right: auto;
            "
          >
            <tr>
              <td>
                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                  <tr>
                    <td align="left">Group 2 Movie Theatres</td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>